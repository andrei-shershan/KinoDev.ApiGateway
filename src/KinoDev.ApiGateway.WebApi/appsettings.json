{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Authentication": {
    "Secret": "Your32CharacterLongSecretKeyHere!!",
    "Issuer": "https://identity.kinodev.localhost",
    "ClientId": "kinodev.internal.client",
    "ClientSecret": "kinodev.internal.secret",
    "Audiences": {
      "Gateway": "kinodev"
    }
  },
  "ApiClients": {
    "DomainServiceUri": "https://domain-service.kinodev.localhost",
    "IdentityServiceUri": "https://identity.kinodev.localhost",
    "PaymentServiceUri": "https://payment-service.kinodev.localhost",
    "StorageServiceUri": "https://storage-service.kinodev.localhost"
  },
  "AppBuilder": {
    "IgnoreSslErrors": true
  },
  "CookieResponse": {
    "Domain": null
  },
  "RabbitMQ": {
    "HostName": "kinodev-rabbitmq",
    "Port": 5672,
    "UserName": "rabbitmq",
    "Password": "rabbitmq"
  },
  "MessageBroker": {
    "Topics": {
      "OrderCompleted": "order-completed"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  }
}